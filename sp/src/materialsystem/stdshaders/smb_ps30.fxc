#include "common_ps_fxc.h"

sampler FBSampler : register(s0);
sampler PrevFBSampler : register(s1);

float2 inSamples : register(c1);

struct PS_INPUT
{
	float2 texCoord : TEXCOORD0;
};


float4 main(PS_INPUT i) : COLOR
{
	float4 curframe = tex2D(FBSampler,i.texCoord);
	float4 prevframe = tex2D(PrevFBSampler,i.texCoord);
	float scale = inSamples.x;
	float4 color = lerp(curframe,prevframe,scale);
    return color;
	
};